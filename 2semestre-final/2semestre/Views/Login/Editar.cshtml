@{
    ViewData["Title"] = "Editar";
}

    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="~/img/LogoBaldan.png">
                    <span class="font-weight-bold">Baldan</span>
                    <span class="text-black-50">baldan@mail.com.br</span>


              
                <div class="form-group row mt-3">
                    <label class="labels col-md-12">Upload de Foto de Perfil</label>
                    <div class="col-md-12">
                        <input type="file" class="form-control-file">
                        <small class="form-text text-muted">Escolha uma imagem para a sua foto de perfil.</small>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label class="labels col-md-12">Upload de Banner</label>
                    <div class="col-md-12">
                        <input type="file" class="form-control-file">
                        <small class="form-text text-muted">Escolha uma imagem para o banner do seu perfil.</small>
                    </div>
                </div>

             

                   
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="text-right">Atualizar Informações</h2>
                    </div>
                    <div class="form-group row mt-3">
                        <label class="labels col-md-12">Empresa</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Nome" value="">
                        </div>
                    </div>
                     <div class="form-group row mt-3">
                        <label class="labels col-md-12">Link do seu site</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="http..." value="">
                        </div>
                    </div>
                    <div class="form-group row mt-3">
                        <label for="descricao" class="col-md-12">Sobre nós</label>
                        <div class="col-md-12">
                            <textarea class="form-control" id="descricao" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group row mt-3">
                        <label for="lema" class="col-md-12">Lema</label>
                        <div class="col-md-12">
                            <textarea class="form-control" id="lema" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Cidade</label>
                            <input type="text" class="form-control" value="" placeholder="Cidade">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Estado/Região</label>
                            <input type="text" class="form-control" value="" placeholder="Estado">
                        </div>
                    </div>

                    <center>
                        <button class="mt-5 text-center" id="botao-center" type="submit"  >Atualizar</button>
                    </center>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-3 py-5">
                    <h2 class="text-center">Contatos</h2>
                    <div class="col-md-12">
                        <label class="labels">Email</label>
                        <input type="text" class="form-control" placeholder="email@gmail.com" value="">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Número</label>
                        <input type="text" class="form-control" placeholder="Telefone" value="">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Celular</label>
                        <input type="text" class="form-control" placeholder="Whatsapp" value="">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Linkedln</label>
                        <input type="text" class="form-control" placeholder="Linkedln" value="">
                    </div>
                     <div class="col-md-12">
                        <label class="labels">Facebook</label>
                        <input type="text" class="form-control" placeholder="Facebook" value="">
                    </div>
                     <div class="col-md-12">
                        <label class="labels">Instagram</label>
                        <input type="text" class="form-control" placeholder="Instagram" value="">
                    </div>

                </div>
            </div>
        </div>
    </div>
