<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agroconnect_Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agroconnect_Login.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="Logo" width="130" height="60" class="d-inline-block align-text-top" >
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Agroconnect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                       <!--<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>--> 

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Divulgações por Categorias
                            </a>
                            <div class="dropdown-menu bg-light" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-area="" asp-controller="Divulgacoes" asp-action="Produto">Produtos</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Divulgacoes" asp-action="Maquina">Máquinas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Divulgacoes" asp-action="Servico">Serviços</a>
                            </div>
                        </li>
                 
                    </ul>
                      <div class="flex-container">
                   <input type="text" id="filtro" placeholder="Digite para filtrar">
                   <div>
                       <div class="pesquisaC">
                        <div class="item" data-titulo="Baldan">
                            <img src="~/img/LogoBaldan.png" alt="Ícone 1" class="icone" />
                            <a asp-area="" asp-controller="Publicacao" asp-action="Index"> Baldan </a></div>

                            <div class="item" data-titulo="Bella Vista">
                                <img src="https://static.vecteezy.com/system/resources/previews/017/628/444/original/letter-b-agriculture-logo-and-farming-logo-symbol-design-free-vector.jpg" alt="Ícone 1" class="icone" />
                                <a asp-area="" asp-controller="Login" asp-action="Perfil"> Bella Vista </a>
                            </div>

                        <div class="item" data-titulo="Sol Poente">
                            <img src="https://blog4.mfrural.com.br/wp-content/uploads/2020/08/fazenda-venda3.jpg" alt="Ícone 1" class="icone" />
                            <a asp-area="" asp-controller="Login" asp-action="Perfil"> Sol Poente </a></div>
                    </div>
                    </div>
                    </div>
                    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
                    <partial name="_LoginPartial" />
                </div>
            </div>
           
        </nav>
    </header>
    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    
</body>


</html>
